@model IEnumerable<webapp_stufv.Models.DesDriver>
@section content{
    <div class="page-header">
        <h1>@ViewBag.Title</h1>
    </div>
    <p>
        @ViewBag.Description
    </p>
    @if (Model.Count() > 0)
    {
        <table class="row">
            <thead>
                <tr>
                    <th class="col-lg-4">
                        Naam van bestuurder
                    </th>
                    <th class="col-lg-2">
                        Vrije plaatsen
                    </th>
                    <th class="col-lg-6">

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="col-lg-4">
                            <a href="@Url.Action("Users", "Profile", new { id = item.UserId })">
                                @item.GetDriverName()
                            </a>
                        </td>
                        <td class="col-lg-2">
                            @item.GetFreeSpaces()
                        </td>
                        <td class="col-lg-6">
                            <a href="@Url.Action("JoinBob", "Events", new { id = item.Id })">
                                <p class="btn btn-success">Rij mee</p>
                            </a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    }
    else {
        <div class="alert alert-warning">
            Er zijn nog geen BOBs beschikbaar.Word zelf een bob.
        </div>
    }

    <div class="right">
        <a href="@Url.Action("Details", "Events", new { id = ViewBag.EventId })">
            <p class="btn btn-danger">Terug</p>
        </a>
    </div>

}
