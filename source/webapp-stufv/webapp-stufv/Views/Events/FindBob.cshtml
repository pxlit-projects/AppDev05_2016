@model IEnumerable<webapp_stufv.Models.DesDriver>
@section content{
<div class="page-header">
    <h1>@ViewBag.Title</h1>
</div>
    <p>
        @ViewBag.Description
    </p>
    <table class="row">
    <thead>
        <tr>
            <th class="col-lg-4">
                Naam van bestuurder
            </th>
            <th class="col-lg-2">
                Vrije plaatsen
            </th>
            <th class="col-lg-6">

            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td class="col-lg-4">
                        @item.GetDriverName()
                    </td>
                    <td class="col-lg-2">
                        @item.GetFreeSpaces()
                    </td>
                    <td class="col-lg-6">
                        <a href="@Url.Action("JoinBob", "Events", new { id = item.Id })">
                            <p class="btn btn-success">Rij mee</p>
                        </a>
                    </td>
                </tr>

            }
        }
        else {
            <tr>
                <td><br />
                    Er zijn nog geen BOBs beschikbaar. Word zelf een bob. 
                </td>
            </tr>
        }

    </tbody>
</table>

}
