@section content{

    <div id="login">
        <h3>Aanmelden</h3>
        <form action="/Login/Process" method="post">
            <div class="veld">
                <label for="username">Gebruikersnaam: </label>
                <input type="text" name="vUsername" id="username" class="widthInput" required />
            </div>
            <div class="veld">
                <label for="password">Wachtwoord: </label>
                <input type="password" name="vPassword" id="password" class="widthInput" required />
            </div>
            <div>
                <input type="button" value="Inzenden" class="button" />
                <a href="/Login/Register" class="button">Registreren</a>
            </div>
        </form>
    </div>

}