@section content{

    <div id="login">
        <h3>Aanmelden</h3>
        <form action="Login/VerwerkLogin" method="post">
            <div class="veld">
                <label for="username">Gebruikersnaam: </label>
                <input type="text" name="vUsername" id="username" class="widthInput" />
            </div>
            <div class="veld">
                <label for="password">Wachtwoord: </label>
                <input type="password" name="vPassword" id="password" class="widthInput" />
            </div>
        </form>
    </div>

}