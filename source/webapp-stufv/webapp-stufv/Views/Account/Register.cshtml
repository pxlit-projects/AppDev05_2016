@model webapp_stufv.Models.User
@section Content {
    @using ( Html.BeginForm ( "CreateAccount", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" } ) ) {
        @Html.AntiForgeryToken( )
        <h4>Creëer een nieuw account.</h4>
        <hr />
        <div class="form-group">
            <div class="col-md-2 control-label">Email adres: </div>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2 control-label">wachtwoord: </div>
            <div class="col-md-10">
                @Html.PasswordFor(m => m.PassWord, new { @class = "form-control" })
            </div>
        </div>
       // <div class="form-group">
        //    <div class="col-md-2 control-label">Controle wachtwoord: </div>
        //    <div class="col-md-10">
         //       @Html.PasswordFor( m => m.PassWord, new { @class = "form-control" })
         //   </div>
       // </div>
        <div class="form-group">
            <div class="col-md-2 control-label">Voornaam: </div>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2 control-label">Achternaam: </div>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
            </div>
        </div>
        <script type="text/javascript" src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.min.js"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/css/bootstrap-datepicker3.css" />
                <div class="form-group">
            <div class="col-md-2 control-label">Geboortedatum: </div>
                        <div class="col-md-10">
                                <input class="form-control" id="BirthDate" name="BirthDate" placeholder="DD/MM/YYY" type="text" />
                            <script>
                                var date_input = $('input[name="BirthDate"]');
    var container=$('.bootstrap-iso form').length>0 ? $('.bootstrap-iso form').parent() : "body";
    var options={
        startView: 2,
        language: "nl-BE"
    };
    date_input.datepicker(options);
                            </script>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-2 control-label">Geboorteplaats: </div>
                        <div class="col-md-10">
                            @Html.EditorFor(m => m.BirthPlace, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-2 control-label">Geslacht: </div>
                        <div class="col-md-10">
                            <table>
                                <tr>
                                    <td>
                                        @Html.RadioButtonFor(m => m.Sex, "M", new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.Label("Man")
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.RadioButtonFor(m => m.Sex, "V", new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.Label("Vrouw")
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-2 control-label">Postcode: </div>
                        <div class="col-md-10">
                            @Html.EditorFor(m => m.ZipCode, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-2 control-label">Telefoon nummer: </div>
                        <div class="col-md-10">
                            @Html.EditorFor(m => m.TelNr, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-2 control-label">GSM nummer: </div>
                        <div class="col-md-10">
                            @Html.EditorFor(m => m.MobileNr, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Register" />
            </div>
        </div>
    }
}




