@model webapp_stufv.Models.Organisation

@section Content {

<h2>Register</h2>
    <div class="col-md-8">
    @using (Html.BeginForm("Process", "Organisation", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="col-md-2 control-label">Naam organistatie</div>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2 control-label">Bescrijving </div>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Registreer organisatie" />
            </div>
        </div>
    }
</div>

    }