@section Content{

    @model IEnumerable<webapp_stufv.Models.Guideline>

    <div class="container">
        <div class="page-header">
            <h1>@ViewBag.Title</h1>
            <p class="lead"> Hier vind je enkele richtlijnen omtrent veilig alcohol gebruik.</p>
        </div>
        @foreach ( var item in Model ) {

            <div class="row">
                <div class="col-md-12">
                    <button type="button" class="btncollapse" data-toggle="collapse" data-target="#@item.Id"></button>
                    <i>@Html.DisplayFor( modelItem => item.Short )</i> <br />
                    <div id="@item.Id" class="collapse">
                        @Html.DisplayFor( modelItem => item.Content )
                    </div> <br />
                </div>
            </div>

        }
    </div>
}
